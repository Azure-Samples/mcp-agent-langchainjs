{
  "name": "mcp-agent-langchainjs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "run-on-output -n 'ready' -p 'burger.*lock,agent.*lock' concurrently \"npm:start:*\" --raw  --kill-others",
    "start:burger": "npm run start --workspace=burger-webapp",
    "start:mcp": "npm run start --workspace=burger-mcp",
    "start:agent": "npm run start --workspace=agent-webapp",
    "ready": "echo '\nðŸš€ All services ready ðŸš€\n\n- Agent webapp  : http://localhost:4280\n- Burger webapp : http://localhost:5173\n- Burger MCP    : http://localhost:3000/mcp\n'",
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "format": "prettier --list-different --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure-Samples/mcp-agent-langchainjs.git"
  },
  "homepage": "https://github.com/Azure-Samples/mcp-agent-langchainjs",
  "bugs": {
    "url": "https://github.com/Azure-Samples/mcp-agent-langchainjs/issues"
  },
  "keywords": [
    "langchainjs",
    "agent",
    "assistant",
    "serverless",
    "typescript",
    "azure",
    "azure-functions",
    "azure-static-web-apps",
    "hamburger",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9",
    "prettier": "^3",
    "rimraf": "^6",
    "run-on-output": "^1.0.1",
    "typescript": "^5",
    "xo": "^0.60.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "@typescript-eslint/triple-slash-reference": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/member-ordering": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-floating-promises": "off",
      "@typescript-eslint/ban-types": "off",
      "import/no-unassigned-import": "off",
      "import/extensions": "off",
      "n/prefer-global/process": "off",
      "no-new-func": "off",
      "unicorn/prefer-global-this": "off",
      "unicorn/prefer-module": "off",
      "unicorn/no-new-array": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "combineDocsChain": true,
            "env": true,
            "Db": true
          }
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": [
          "*.json"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  }
}
