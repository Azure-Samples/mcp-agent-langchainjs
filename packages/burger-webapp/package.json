{
  "name": "burger-webapp",
  "description": "Web dashboard for displaying Contoso Burgers orders",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently npm:serve:api npm:serve:webapp --raw --kill-others",
    "start:mock": "concurrently npm:serve:mocks npm:serve:webapp --raw --kill-others",
    "serve:api": "cd ../burger-api && npm start",
    "serve:mocks": "smoke -p 7071 -h 127.0.0.1 mocks",
    "serve:webapp": "npm run dev -s",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "smoke": "^4.0.0",
    "vite": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
