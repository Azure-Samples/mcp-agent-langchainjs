{
  "name": "burger-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Contoso Burgers API",
  "private": true,
  "type": "module",
  "exports": "./lib/local.js",
  "scripts": {
    "start": "tsx src/server.ts",
    "start:local": "tsx src/local.ts",
    "dev": "tsx watch src/server.ts",
    "dev:local": "tsx watch src/local.ts",
    "build": "tsc",
    "clean": "rimraf lib",
    "docker:build": "docker build -t burger-mcp -f ./Dockerfile ../..",
    "docker:run": "docker run --rm -p 3000:3000 burger-mcp"
  },
  "keywords": [],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "dotenv": "^17.0.1",
    "express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20",
    "tsx": "^4"
  }
}
